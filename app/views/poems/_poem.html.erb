<div id="<%= dom_id poem %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= poem.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= poem.body %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this poem", poem, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this poem', edit_poem_path(poem), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
