<div id="<%= dom_id artist %>">

  <p class="my-5">
    <strong class="block font-medium mb-1">First:</strong>
    <%= artist.first %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last:</strong>
    <%= artist.last %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Bio:</strong>
    <%= artist.bio %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nameplate:</strong>
    <%= artist.nameplate %>
  </p>
  
  <% if action_name != "show" %>
    <%= link_to "Show this artist", artist, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this artist', edit_artist_path(artist), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
